<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="pie_chart_text1_size">42sp</dimen>
    <dimen name="pie_chart_text2_size">16dp</dimen>

</resources>
